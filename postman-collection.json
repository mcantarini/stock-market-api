{
  "info": {
    "_postman_id": "stock-market-api-collection",
    "name": "Stock Market API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Verifica que la API esté funcionando correctamente"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Instruments",
      "item": [
        {
          "name": "Buscar Instrumentos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/instruments?search=YPF",
              "host": ["{{baseUrl}}"],
              "path": ["instruments"],
              "query": [
                {
                  "key": "search",
                  "value": "YPF",
                  "description": "Término de búsqueda (ticker o nombre)"
                }
              ]
            },
            "description": "Busca instrumentos por ticker o nombre"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Portfolio",
      "item": [
        {
          "name": "Obtener Portfolio del Usuario",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/:userId/portfolio",
              "host": ["{{baseUrl}}"],
              "path": ["users", ":userId", "portfolio"],
              "variable": [
                {
                  "key": "userId",
                  "value": "1",
                  "description": "ID del usuario"
                }
              ]
            },
            "description": "Obtiene el portfolio completo del usuario con sus posiciones y efectivo disponible"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Cash Operations",
          "item": [
            {
              "name": "CASH IN - Depositar Dinero",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"userId\": 1,\n  \"instrumentId\": 66,\n  \"side\": \"CASH_IN\",\n  \"type\": \"MARKET\",\n  \"amount\": 10000\n}",
                  "options": {
                    "raw": {
                      "language": "json"
                    }
                  }
                },
                "url": {
                  "raw": "{{baseUrl}}/orders",
                  "host": ["{{baseUrl}}"],
                  "path": ["orders"]
                },
                "description": "Deposita dinero en la cuenta del usuario. IMPORTANTE: usar instrumentId 66 (ARS)"
              },
              "response": []
            },
            {
              "name": "CASH OUT - Retirar Dinero",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"userId\": 1,\n  \"instrumentId\": 66,\n  \"side\": \"CASH_OUT\",\n  \"type\": \"MARKET\",\n  \"amount\": 5000\n}",
                  "options": {
                    "raw": {
                      "language": "json"
                    }
                  }
                },
                "url": {
                  "raw": "{{baseUrl}}/orders",
                  "host": ["{{baseUrl}}"],
                  "path": ["orders"]
                },
                "description": "Retira dinero de la cuenta del usuario. IMPORTANTE: usar instrumentId 66 (ARS)"
              }
            }
          ]
        },
